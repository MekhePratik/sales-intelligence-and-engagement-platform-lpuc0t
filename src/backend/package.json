{
  "name": "@b2b-platform/backend",
  "version": "1.0.0",
  "description": "Backend service for B2B sales intelligence and engagement platform",
  "private": true,
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "nodemon -r dotenv/config src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node -r dotenv/config dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "security:audit": "pnpm audit",
    "clean": "rimraf dist coverage"
  },
  "dependencies": {
    "@company/activity-logger": "^1.0.0",
    "@company/audit-logger": "^1.0.0",
    "@company/security-service": "^1.0.0",
    "@prisma/client": "^5.0.0",
    "@shared/audit-logger": "^1.0.0",
    "@shared/cache": "^1.0.0",
    "@shared/error-handler": "^1.0.0",
    "@shared/errors": "^1.0.0",
    "@supabase/supabase-js": "^2.38.0",
    "@upstash/ratelimit": "^1.0.0",
    "bull": "^4.11.3",
    "bottleneck": "^2.19.5",
    "cache-manager": "^5.0.0",
    "cache-validator": "^2.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "datadog-metrics": "^1.2.0",
    "date-fns": "^2.30.0",
    "dayjs": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.0",
    "express-monitor": "^1.0.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.3.2",
    "ms": "^2.1.3",
    "node-cache": "^5.1.2",
    "on-finished": "^2.4.1",
    "openai": "^4.12.0",
    "opossum": "^6.0.0",
    "prom-client": "^14.0.0",
    "rate-limiter-flexible": "^2.4.1",
    "resend": "^1.1.0",
    "sanitize-html": "^2.11.0",
    "stripe": "^13.8.0",
    "uuid": "^9.0.0",
    "validator": "^13.0.0",
    "winston": "^3.10.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@jest/globals": "^29.7.0",
    "@test/database": "^1.0.0",
    "@test/mock-email": "^1.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/test-data-generator": "^1.0.0",
    "@testing/database": "^1.0.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.17.17",
    "@types/security-validator": "^1.0.0",
    "@opentelemetry/api": "^1.4.0",
    "@sentry/node": "^7.0.0",
    "dd-trace": "^3.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "prisma": "^5.3.1",
    "redis-mock": "^0.56.3",
    "supertest": "^6.3.3",
    "testcontainers": "^9.0.0",
